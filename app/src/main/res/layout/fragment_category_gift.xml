<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.wenkai.my.gift.ui.fragment.CategoryGiftFragment"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF">

    <LinearLayout
        android:id="@+id/ll_category_gift_select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_gift"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/gift_category_guide"
            android:layout_margin="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="选礼神器"
            android:clickable="true"
            android:layout_toRightOf="@+id/iv_gift"
            android:layout_alignTop="@+id/iv_gift"
            android:gravity="center"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#c4c4c4"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <ListView
            android:id="@+id/lv_gift_group"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:divider="#00FFFFFF"
            android:background="#f1f0f0"
            android:scrollbars="none">
        </ListView>
        <ExpandableListView
            android:id="@+id/elv_gift_child"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:groupIndicator="@null"
            android:divider="#00000000">
        </ExpandableListView>
    </LinearLayout>
</LinearLayout>
