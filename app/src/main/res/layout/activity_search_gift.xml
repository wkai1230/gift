<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.SearchGiftActivity">
    <LinearLayout
        android:id="@+id/ll_search_gift"
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize"
        android:background="#FF0000">
        <ImageButton
            android:id="@+id/btn_search_gift_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_action_back"
            android:background="#00FF0000"
            android:padding="10dp"/>
        <FrameLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_height="match_parent">
        <EditText
            android:id="@+id/et_search_gift"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/bg_editor_search"
            android:layout_gravity="center"
            android:hint="搜索礼物、攻略"
            android:padding="3dp"
            android:textColorHint="#c4c4c4"
            android:background="@drawable/shape_search"
            android:textSize="20sp"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/fl_search"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_search_gift"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:text="搜索"
                android:clickable="true"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:layout_marginRight="20dp"
                android:background="#00000000" />
            <ImageButton
                android:id="@+id/ib_search_gift_sort"
                android:layout_width="30dp"
                android:gravity="center"
                android:layout_marginRight="20dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_menu_sort"
                android:background="#00FF0000"/>
        </FrameLayout>
    </LinearLayout>
    <RadioGroup
        android:id="@+id/rg_search_gift"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_below="@+id/ll_search_gift">
        <RadioButton
            android:id="@+id/rb_search_gift"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:button="@null"
            android:text="礼物"
            android:gravity="center"/>
        <TextView
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#c4c4c4"/>
        <RadioButton
            android:id="@+id/rb_search_strategy"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:button="@null"
            android:text="攻略"
            android:gravity="center"/>
    </RadioGroup>
    <LinearLayout
        android:id="@+id/ll_search_gift_line"
        android:layout_below="@+id/rg_search_gift"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_line1_search"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
        <TextView
            android:id="@+id/tv_line2_search"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_search_gift"
        android:layout_below="@+id/ll_search_gift_line"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#e7e5e5">
    </android.support.v4.view.ViewPager>
</RelativeLayout>
