<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">
    <ImageView
        android:id="@+id/iv_hot_comment_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="fitXY"
        android:src="@drawable/ig_profile_photo_default"
        android:padding="10dp"/>
    <TextView
        android:id="@+id/tv_hot_comment_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_hot_comment_icon"
        android:text="123"/>
    <TextView
        android:id="@+id/tv_hot_comment_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2月11日 15:22"
        android:layout_alignParentRight="true"/>
    <TextView
        android:id="@+id/tv_hot_comment_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_hot_comment_name"
        android:layout_alignLeft="@+id/tv_hot_comment_name"
        android:text="我买的"/>
</RelativeLayout>