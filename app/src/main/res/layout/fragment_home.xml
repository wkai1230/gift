<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
        android:id="@+id/tb_home_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FF0000">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_signin"
            android:background="#FF0000"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="礼物说"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:layout_gravity="center"/>
        <ImageButton
            android:id="@+id/ib_search_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_menu_search"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:background="#FF0000"/>
    </android.support.v7.widget.Toolbar>


    <LinearLayout
        android:id="@+id/ll_home_heart_tb"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_below="@+id/tb_home_fragment">
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <android.support.design.widget.TabLayout
                android:id="@+id/tl_home_fragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/tv_pop_show"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="切换频道"
                android:paddingLeft="20dp"
                android:gravity="center_vertical"/>
        </FrameLayout>
        <FrameLayout
            android:layout_width="40dp"
            android:layout_height="match_parent">
            <ImageButton
                android:id="@+id/ib_home_fragment_down"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00000000"
                android:src="@drawable/arrow_grey_down"/>
            <ImageButton
                android:id="@+id/ib_home_fragment_up"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00000000"
                android:src="@drawable/arrow_grey_up"/>
        </FrameLayout>
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ll_home_heart_tb">
    </android.support.v4.view.ViewPager>
</RelativeLayout>