<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.CategoryFragment">
    <android.support.v7.widget.Toolbar
        android:id="@+id/tb_category_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FF0000">

        <RadioGroup
            android:id="@+id/rg_category"
            android:layout_width="210dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/rb_strategy_category"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:text="攻略"
                android:textColor="@color/radio_btn_color_select"
                android:background="@drawable/radio_btn_left_select"
                android:gravity="center"/>
            <RadioButton
                android:id="@+id/rb_gift_category"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:text="礼包"
                android:textColor="@color/radio_btn_color_select"
                android:background="@drawable/radio_btn_right_select"
                android:gravity="center"/>
        </RadioGroup>

        <ImageButton
            android:id="@+id/ib_category_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_menu_search"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:background="#FF0000"/>
    </android.support.v7.widget.Toolbar>
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_category"
        android:layout_below="@+id/tb_category_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v4.view.ViewPager>
</RelativeLayout>
